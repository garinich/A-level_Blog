@model Blog.Models.AuthorViewModel

@{
    ViewBag.Title = "Author Details - " + @Model.Author.Name;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Author Details - @Model.Author.Name</h2>

<dl class="row details first">
    <dt class="col-sm-2">Id</dt>
    <dd class="col-sm-10">@Model.Author.Id</dd>
</dl>
<dl class="row details">
    <dt class="col-sm-2">Name</dt>
    <dd class="col-sm-10">@Model.Author.Name</dd>
</dl>
<dl class="row details">
    <dt class="col-sm-2">Articles</dt>
    <dd class="col-sm-10">
        <ul class="list-unstyled">
            @foreach (var article in Model.Author.Articles)
            {
                <li>
                    @Html.ActionLink(article.Title, "Details", "Article", new { Id = article.Id }, null)
                </li>
            }
        </ul>
    </dd>
</dl>
