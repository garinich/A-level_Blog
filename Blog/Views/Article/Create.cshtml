@model SelectList

@{
    ViewBag.Title = "Create New Article";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Create New Article</h2>

@using (Html.BeginForm("Create", "Article", FormMethod.Post))
{
    <div class="form-group">
        <label>Title</label>
        @Html.TextBox("Title", "",new { @class = "form-control"})
    </div>
    <div class="form-group">
        <label>Author</label>
        @Html.DropDownList("AuthorId",
            @Model,
            new { @class = "form-control" })
    </div>
    <div class="form-group">
        <label>Description</label>
        @Html.TextBox("Description", "",new { @class = "form-control"})
    </div>
    <div class="form-group">
        <label>Content</label>
        @Html.TextArea("Content", "", 5, 50, new { @class = "form-control" })
    </div>
    <button type="submit" class="btn btn-primary">Create</button>
}
